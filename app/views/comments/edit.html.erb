<div class="edit-form">
    <span>Edit Tweet</span>
</div>
<%= form_with model: @comment  do |form| %>
    <div class="edit-body-container">
        <span><%= form.label :body %></span> 
        <%= form.text_area :body  %>
        <% if @comment.errors.messages[:body].any? %>
            <span class="content--sm input__error-message">
                <%= @comment.errors.messages[:body].join(", ")%>
            </span>
        <% end %>
        <%= form.hidden_field :tweet_id, value: @comment.tweet_id %>
        <%= form.hidden_field :user_id, value: @comment.user_id %>

        <%= form.submit "Edit" ,class: "edit-submit" %>
    </div>    
<% end %>

